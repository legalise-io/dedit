{
  "name": "dedit-react-editor",
  "version": "0.1.31",
  "description": "A flexible, unstyled React document editor with track changes and comments support",
  "author": "Jamie",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dedit"
  },
  "homepage": "https://github.com/yourusername/dedit#readme",
  "bugs": {
    "url": "https://github.com/yourusername/dedit/issues"
  },
  "keywords": [
    "react",
    "editor",
    "tiptap",
    "prosemirror",
    "track-changes",
    "comments",
    "word",
    "docx",
    "document",
    "rich-text"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --config vite.lib.config.ts && tsc --project tsconfig.lib.json",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build:lib"
  },
  "dependencies": {
    "@hocuspocus/provider": "^3.4.0",
    "@tiptap/core": "^2.1.0",
    "@tiptap/extension-bold": "^2.1.0",
    "@tiptap/extension-collaboration": "^2.27.1",
    "@tiptap/extension-collaboration-cursor": "^2.27.1",
    "@tiptap/extension-document": "^2.1.0",
    "@tiptap/extension-heading": "^2.1.0",
    "@tiptap/extension-history": "^2.27.1",
    "@tiptap/extension-italic": "^2.1.0",
    "@tiptap/extension-paragraph": "^2.1.0",
    "@tiptap/extension-table": "^2.1.0",
    "@tiptap/extension-table-cell": "^2.1.0",
    "@tiptap/extension-table-header": "^2.1.0",
    "@tiptap/extension-table-row": "^2.1.0",
    "@tiptap/extension-text": "^2.1.0",
    "@tiptap/pm": "^2.1.0",
    "@tiptap/react": "^2.1.0",
    "diff": "^8.0.2",
    "uuid": "^13.0.0",
    "yjs": "^13.6.27"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/diff": "^7.0.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
